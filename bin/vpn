#!/bin/sh
#NM="$1"
[ "$NM" ] || NM=IBISVPN

while getopts "klvsz" opt; do
  case "$opt" in
    k)
	  nmcli con down "$NM"
      ;;
    l)
	  nmcli -f GENERAL.STATE con show "$NM"
      ;;
    v)
	  sudo journalctl -u NetworkManager.service
      ;;
    s)
	  nmcli con up "$NM"
      ;;
    z)
      emacs -nw $0
      ;;
  esac
done











